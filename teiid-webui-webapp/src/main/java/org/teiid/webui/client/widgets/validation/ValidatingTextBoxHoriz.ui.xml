<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:t="urn:import:org.teiid.webui.client.widgets.validation" 
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

  <ui:style>
    .vertAlgn {
      display: inline-block;
      vertical-align: middle;
      float:none;
    }
  </ui:style>

  <b:FormGroup ui:field="formgroup">
	<b:Container>
	  <b:Row>
        <b:Column size="SM_2" pull="LEFT" addStyleNames="{style.vertAlgn}">
          <b:FormLabel for="formGrp" ui:field="fgLabel">Name</b:FormLabel>
        </b:Column>
        <b:Column size="SM_8" pull="LEFT" addStyleNames="{style.vertAlgn}">
          <t:ExtendedTextBox b:id="formGrp" ui:field="fgTextBox" />
        </b:Column>
        <b:Column size="SM_2" pull="LEFT" addStyleNames="{style.vertAlgn}">
          <b:HelpBlock ui:field="fgHelpBlock" text="Enter text" />
        </b:Column>
	  </b:Row>
	</b:Container>
  </b:FormGroup>

</ui:UiBinder>
